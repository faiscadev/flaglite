# FlagLite Environment Configuration
# Copy this file to .env and customize as needed:
#   cp .env.example .env

# ============================================
# PostgreSQL Settings
# ============================================
POSTGRES_USER=flaglite
POSTGRES_PASSWORD=flaglite_dev_password
POSTGRES_DB=flaglite

# ============================================
# FlagLite API Settings
# ============================================

# JWT Secret for API authentication
# IMPORTANT: Generate a secure secret for production!
# Run: openssl rand -hex 32
JWT_SECRET=dev_jwt_secret_change_me_in_production

# Logging level (debug, info, warn, error)
RUST_LOG=info

# Port to expose the API (default: 8080)
FLAGLITE_PORT=8080
