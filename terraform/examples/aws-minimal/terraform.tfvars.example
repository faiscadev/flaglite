# FlagLite Terraform Variables Example
# Copy this file to terraform.tfvars and customize

# Project identification
project_name = "flaglite"
environment  = "dev"
aws_region   = "us-east-1"

# Networking
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b"]

# EKS Configuration
eks_cluster_version    = "1.29"
eks_node_instance_type = "t3.medium"  # ~$30/month per node
eks_node_desired_size  = 2            # 2 nodes = ~$60/month
eks_node_min_size      = 1
eks_node_max_size      = 4

# RDS Configuration (optional - set enable_rds = true to use)
enable_rds            = false
rds_instance_class    = "db.t3.micro"  # ~$13/month
rds_allocated_storage = 20              # GB
rds_db_name           = "flaglite"
rds_username          = "flaglite_admin"
# rds_password        = "your-secure-password"  # Use environment variable instead!

# Additional tags
tags = {
  Team    = "engineering"
  Product = "flaglite"
}

# ============================================================
# COST ESTIMATES (us-east-1 pricing, February 2024)
# ============================================================
#
# MINIMAL SETUP (EKS only, 2 nodes):
#   - NAT Gateway:        ~$32/month + data transfer
#   - EKS Control Plane:  ~$73/month
#   - t3.medium nodes x2: ~$60/month
#   - CloudWatch Logs:    ~$5/month
#   - TOTAL:              ~$170/month
#
# WITH RDS (db.t3.micro):
#   - Add RDS:            ~$13/month
#   - TOTAL:              ~$183/month
#
# COST SAVING TIPS:
#   - Use Spot instances for non-prod (add capacity_type = "SPOT")
#   - Reduce to 1 node in dev (eks_node_desired_size = 1)
#   - Use smaller instances (t3.small = ~$15/month per node)
#   - Disable CloudWatch logs in dev
#
# ============================================================
